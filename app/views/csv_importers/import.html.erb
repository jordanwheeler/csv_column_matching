<% if @matched_column.present? %>
  <% if @results.present? %>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th><%= @column %></th>
        <th><%= @matched_column %></th>
      </tr>
    </thead>
    <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.first %></td>
        <td><%= result.second %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <h3>No matches found for columns '<%= @column %>' and <%= @matched_column %>'</h3>
  <h3>between files <%= @csv1name %> and <%= @csv2name %>.</h3>
  <br />
  <h4>Remember that column names are case-sensitive.</h4>
  <% end %>
<% else %>
  <% if @results.first.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <% @results.first.last.keys.each do |key| %>
            <th><%= key %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |result| %>
        <tr>
          <% result.last.values.each do |value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>

    </table>
  <% else %>
  <h3>No matches found for column '<%= @column %>'</h3>
  <h3>between files <%= @csv1name %> and <%= @csv2name %>.</h3>
  <br />
  <h4>Remember that column names are case-sensitive.</h4>
  <% end %>

<% end %>